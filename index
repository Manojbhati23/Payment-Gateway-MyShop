    <script>
        let selectedUPI = '';
        let selectedWallet = '';
        let currentAmount = 0;
        let selectedCardType = '';

        function selectCard(element, cardType) {
            document.querySelectorAll('.card-icon').forEach(icon => icon.classList.remove('selected'));
            element.classList.add('selected');
            selectedCardType = cardType;
            
            const cardInput = document.getElementById('cardNumber');
            cardInput.focus();
        }

        function proceedToPayment() {
            const amount = parseFloat(document.getElementById('amountInput').value);
            
            if (!amount || amount <= 0) {
                alert('Please enter a valid amount');
                return;
            }

            currentAmount = amount;
            document.getElementById('displayAmount').textContent = amount.toFixed(2);
            document.getElementById('amountEntry').classList.add('hidden');
            document.getElementById('paymentSection').classList.add('active');
        }

        function editAmount() {
            document.getElementById('paymentSection').classList.remove('active');
            document.getElementById('amountEntry').classList.remove('hidden');
        }

        document.querySelectorAll('.method-tab').forEach(tab => {
            tab.addEventListener('click', function() {
                document.querySelectorAll('.method-tab').forEach(t => t.classList.remove('active'));
                document.querySelectorAll('.form-section').forEach(s => s.classList.remove('active'));
                
                this.classList.add('active');
                document.getElementById(this.dataset.method + '-section').classList.add('active');
            });
        });

        document.getElementById('cardNumber').addEventListener('input', function(e) {
            let value = e.target.value.replace(/\s/g, '');
            let formattedValue = value.match(/.{1,4}/g)?.join(' ') || value;
            e.target.value = formattedValue;

            if (value.length >= 1) {
                const firstDigit = value[0];
                if (firstDigit === '4') {
                    document.querySelectorAll('.card-icon').forEach(icon => icon.classList.remove('selected'));
                    document.querySelectorAll('.card-icon')[0].classList.add('selected');
                    selectedCardType = 'visa';
                } else if (firstDigit === '5' || firstDigit === '2') {
                    document.querySelectorAll('.card-icon').forEach(icon => icon.classList.remove('selected'));
                    document.querySelectorAll('.card-icon')[1].classList.add('selected');
                    selectedCardType = 'mastercard';
                } else if (firstDigit === '3') {
                    document.querySelectorAll('.card-icon').forEach(icon => icon.classList.remove('selected'));
                    document.querySelectorAll('.card-icon')[2].classList.add('selected');
                    selectedCardType = 'amex';
                } else if (firstDigit === '6') {
                    document.querySelectorAll('.card-icon').forEach(icon => icon.classList.remove('selected'));
                    document.querySelectorAll('.card-icon')[3].classList.add('selected');
                    selectedCardType = 'rupay';
                }
            }
        });

        document.getElementById('expiry').addEventListener('input', function(e) {
            let value = e.target.value.replace(/\D/g, '');
            if (value.length >= 2) {
                value = value.slice(0, 2) + '/' + value.slice(2, 4);
            }
            e.target.value = value;
        });

        document.getElementById('cvv').addEventListener('input', function(e) {
            e.target.value = e.target.value.replace(/\D/g, '');
        });

        function selectUPI(element, type) {
            document.querySelectorAll('.upi-option').forEach(opt => opt.classList.remove('selected'));
            element.classList.add('selected');
            selectedUPI = type;
            
            const upiInput = document.getElementById('upiId');
            
            const appNames = {
                'gpay': 'Google Pay',
                'phonepe': 'PhonePe',
                'paytm': 'Paytm'
            };
            
            console.log(`Selected ${appNames[type]} for payment of ‚Çπ${currentAmount.toFixed(2)}`);
            
            const upiLink = `upi://pay?pa=8741920569@ybl&pn=Devi Plywood and Hardware&am=${currentAmount.toFixed(2)}&cu=INR&tn=Payment for purchase`;
            
            element.setAttribute('data-upi-link', upiLink);
        }

        function selectWallet(element, type) {
            document.querySelectorAll('.wallet-option').forEach(opt => opt.classList.remove('selected'));
            element.classList.add('selected');
            selectedWallet = type;
            
            const walletNames = {
                'paytm': 'Paytm Wallet',
                'mobikwik': 'Mobikwik',
                'amazon': 'Amazon Pay',
                'freecharge': 'Freecharge'
            };
            
            console.log(`Selected ${walletNames[type]} for payment of ‚Çπ${currentAmount.toFixed(2)}`);
            
            element.setAttribute('data-wallet-selected', type);
        }

        function generateQR() {
            const qrCode = document.getElementById('qrCode');
            
            const upiString = `upi://pay?pa=8741920569@ybl&pn=Devi Plywood and Hardware&am=${currentAmount.toFixed(2)}&cu=INR&tn=Payment for purchase`;
            
            const qrSize = 200;
            const cellSize = 4;
            const cells = qrSize / cellSize;
            
            let qrPattern = '';
            
            for (let i = 0; i < cells; i++) {
                for (let j = 0; j < cells; j++) {
                    const hash = (i * 7 + j * 11 + upiString.charCodeAt((i + j) % upiString.length)) % 2;
                    const color = hash === 0 ? '#556B2F' : '#fff';
                    qrPattern += `<div style="width: ${cellSize}px; height: ${cellSize}px; background: ${color}; float: left;"></div>`;
                }
            }
            
            qrCode.innerHTML = `
                <div style="width: 100%; height: 100%; background: white; padding: 10px; position: relative;">
                    <div style="position: absolute; top: 10px; left: 10px; width: 35px; height: 35px; border: 3px solid #556B2F; background: white;">
                        <div style="width: 15px; height: 15px; background: #556B2F; margin: 7px;"></div>
                    </div>
                    <div style="position: absolute; top: 10px; right: 10px; width: 35px; height: 35px; border: 3px solid #556B2F; background: white;">
                        <div style="width: 15px; height: 15px; background: #556B2F; margin: 7px;"></div>
                    </div>
                    <div style="position: absolute; bottom: 10px; left: 10px; width: 35px; height: 35px; border: 3px solid #556B2F; background: white;">
                        <div style="width: 15px; height: 15px; background: #556B2F; margin: 7px;"></div>
                    </div>
                    
                    <div style="width: ${qrSize}px; height: ${qrSize}px; margin: 0 auto; overflow: hidden;">
                        ${qrPattern}
                    </div>
                    
                    <div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); background: white; padding: 8px; border-radius: 8px; border: 2px solid #6B8E23;">
                        <div style="font-weight: bold; color: #6B8E23; font-size: 14px;">UPI</div>
                    </div>
                    
                    <div style="text-align: center; margin-top: 10px; padding: 10px; background: #fffbf0; border-radius: 8px;">
                        <div style="font-size: 18px; font-weight: 700; color: #556B2F;">‚Çπ${currentAmount.toFixed(2)}</div>
                        <div style="font-size: 11px; color: #8B7355; margin-top: 3px;">Devi Plywood & Hardware</div>
                        <div style="font-size: 10px; color: #8B7355; margin-top: 2px;">8741920569@ybl</div>
                    </div>
                </div>
            `;
            
            console.log('UPI Payment String:', upiString);
            alert('QR Code Generated!\n\nUPI ID: 8741920569@ybl\nAmount: ‚Çπ' + currentAmount.toFixed(2) + '\n\nScan with any UPI app (GPay, PhonePe, Paytm, BHIM)');
        }

        function processPayment(method) {
            let isValid = false;
            let paymentMethod = '';

            if (method === 'card') {
                const cardNumber = document.getElementById('cardNumber').value;
                const cardName = document.getElementById('cardName').value;
                const expiry = document.getElementById('expiry').value;
                const cvv = document.getElementById('cvv').value;

                if (cardNumber && cardName && expiry && cvv && selectedCardType) {
                    isValid = true;
                    paymentMethod = `${selectedCardType.toUpperCase()} Card ending in ${cardNumber.slice(-4)}`;
                } else if (cardNumber && cardName && expiry && cvv) {
                    isValid = true;
                    paymentMethod = `Card ending in ${cardNumber.slice(-4)}`;
                } else {
                    alert('Please fill in all card details and select card type');
                }
            } else if (method === 'upi') {
                const upiId = document.getElementById('upiId').value;
                const qrGenerated = document.getElementById('qrCode').innerHTML.includes('‚Çπ');
                
                if (selectedUPI) {
                    isValid = true;
                    const appNames = {
                        'gpay': 'Google Pay',
                        'phonepe': 'PhonePe',
                        'paytm': 'Paytm'
                    };
                    paymentMethod = appNames[selectedUPI];
                    
                    alert(`Opening ${paymentMethod}...\n\nYou will be redirected to complete the payment of ‚Çπ${currentAmount.toFixed(2)}`);
                } else if (upiId) {
                    isValid = true;
                    paymentMethod = `UPI - ${upiId}`;
                } else if (qrGenerated) {
                    isValid = true;
                    paymentMethod = 'UPI QR Code';
                } else {
                    alert('Please enter UPI ID, select a UPI app, or generate QR code');
                }
            } else if (method === 'wallet') {
                if (selectedWallet) {
                    isValid = true;
                    const walletNames = {
                        'paytm': 'Paytm Wallet',
                        'mobikwik': 'Mobikwik',
                        'amazon': 'Amazon Pay',
                        'freecharge': 'Freecharge'
                    };
                    paymentMethod = walletNames[selectedWallet];
                    
                    alert(`Redirecting to ${paymentMethod}...\n\nYou will be redirected to complete the payment of ‚Çπ${currentAmount.toFixed(2)}`);
                } else {
                    alert('Please select a wallet');
                }
            }

            if (isValid) {
                const txnId = Math.floor(100000000 + Math.random() * 900000000);
                document.getElementById('txnId').textContent = txnId;
                document.getElementById('paidAmount').textContent = currentAmount.toFixed(2);
                
                const successMsg = document.getElementById('successMessage');
                const existingMethod = successMsg.querySelector('.payment-method-display');
                if (existingMethod) {
                    existingMethod.remove();
                }
                
                const methodDisplay = document.createElement('p');
                methodDisplay.className = 'payment-method-display';
                methodDisplay.style.cssText = 'color: #8B7355; font-size: 14px; margin-top: 5px;';
                methodDisplay.textContent = `Payment Method: ${paymentMethod}`;
                
                document.getElementById('paidAmount').parentNode.after(methodDisplay);
                
                document.querySelectorAll('.form-section').forEach(s => s.classList.remove('active'));
                document.getElementById('successMessage').classList.add('active');
            }
        }

        function resetForm() {
            document.getElementById('successMessage').classList.remove('active');
            document.getElementById('paymentSection').classList.remove('active');
            document.getElementById('amountEntry').classList.remove('hidden');
            
            document.getElementById('amountInput').value = '';
            document.getElementById('cardNumber').value = '';
            document.getElementById('cardName').value = '';
            document.getElementById('expiry').value = '';
            document.getElementById('cvv').value = '';
            document.getElementById('upiId').value = '';
            
            document.getElementById('qrCode').innerHTML = `
                <div class="qr-placeholder">
                    <div class="qr-placeholder-icon">üì∑</div>
                    <div>QR Code will appear here</div>
                </div>
            `;
            
            document.querySelectorAll('.upi-option, .wallet-option, .card-icon').forEach(opt => opt.classList.remove('selected'));
            selectedUPI = '';
            selectedWallet = '';
            selectedCardType = '';
            currentAmount = 0;
        }
    </script>
</body>
</html>